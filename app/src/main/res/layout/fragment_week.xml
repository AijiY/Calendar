<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      style="@style/dayLayoutInWeek">
      <TextView
        android:id="@+id/SunTextView"
        style="@style/weekdayTextView"
        android:background="@color/red_white"
        android:textColor="@color/white" />
      <View
        style="@style/verticalBorder" />
      <FrameLayout
        style="@style/weekdayTaskView" />
    </LinearLayout>

    <LinearLayout
      style="@style/dayLayoutInWeek">
      <TextView
        android:id="@+id/MonTextView"
        style="@style/weekdayTextView" />
      <View
        style="@style/verticalBorder" />
      <FrameLayout
        style="@style/weekdayTaskView" />
    </LinearLayout>

    <LinearLayout
      style="@style/dayLayoutInWeek">
      <TextView
        android:id="@+id/TueTextView"
        style="@style/weekdayTextView" />
      <View
        style="@style/verticalBorder" />
      <FrameLayout
        style="@style/weekdayTaskView" />
    </LinearLayout>

    <LinearLayout
      style="@style/dayLayoutInWeek">
      <TextView
        android:id="@+id/WedTextView"
        style="@style/weekdayTextView" />
      <View
        style="@style/verticalBorder" />
      <FrameLayout
        style="@style/weekdayTaskView" />
    </LinearLayout>

    <LinearLayout
      style="@style/dayLayoutInWeek">
      <TextView
        android:id="@+id/ThuTextView"
        style="@style/weekdayTextView" />
      <View
        style="@style/verticalBorder" />
      <FrameLayout
        style="@style/weekdayTaskView" />
    </LinearLayout>

    <LinearLayout
      style="@style/dayLayoutInWeek">
      <TextView
        android:id="@+id/FriTextView"
        style="@style/weekdayTextView" />
      <View
        style="@style/verticalBorder" />
      <FrameLayout
        style="@style/weekdayTaskView" />
    </LinearLayout>

    <LinearLayout
      style="@style/dayLayoutInWeek">
      <TextView
        android:id="@+id/SatTextView"
        style="@style/weekdayTextView"
        android:background="@color/blue_white"
        android:textColor="@color/white" />
      <View
        style="@style/verticalBorder" />
      <FrameLayout
        style="@style/weekdayTaskView" />
    </LinearLayout>

  </LinearLayout>

</FrameLayout>