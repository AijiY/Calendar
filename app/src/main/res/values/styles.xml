<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
    <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
  </style>

  <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">20sp</item> <!-- ここで文字サイズを指定 -->
  </style>

  <style name="verticalBorder">
    <item name="android:layout_width">0.1dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/lightGrey</item>
  </style>

  <style name="horizontalBorder">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.1dp</item>
    <item name="android:background">@color/lightGrey</item>
  </style>

<!--fragment_day-->
  <style name="LineViewStyle">
    <item name="android:layout_marginTop">40dp</item>
    <item name="android:layout_marginBottom">40dp</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0.1dp</item>
    <item name="android:layout_weight">8</item>
    <item name="android:background">@color/grey</item>
  </style>

  <style name="weekdayTextView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">16sp</item>
  </style>


<!--fragment_week-->
  <style name="dayLayoutInWeek">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:background">@drawable/grey_border</item>
  </style>

  <style name="weekdayTaskView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">7</item>
  </style>

<!--fragment_month-->
  <style name="weekLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/grey_border</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="dayLayout">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/grey_border</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="dayText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
    <item name="android:text">@string/daySample</item> <!-- デフォルトのテキスト -->
  </style>

  <style name="dayTaskView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">5</item>
  </style>

</resources>