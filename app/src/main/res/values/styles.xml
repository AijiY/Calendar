<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
    <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    <item name="android:background">@color/green</item>
    <item name="tabTextColor">@color/white</item>
    <item name="tabIndicatorColor">@color/white</item>
  </style>

  <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">20sp</item> <!-- ここで文字サイズを指定 -->
  </style>

  <style name="verticalBorder">
    <item name="android:layout_width">0.1dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/lightGrey</item>
  </style>

  <style name="horizontalBorder">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.1dp</item>
    <item name="android:background">@color/lightGrey</item>
  </style>

  <style name="lineForDetails">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">4dp</item>
    <item name="android:background">@color/grey</item>
  </style>

  <style name="addButtonStyle">
    <item name="android:background">@drawable/add_button</item> <!-- カスタム背景を指定 -->
    <item name="android:layout_width">wrap_content</item> <!-- 横幅を自動調整 -->
    <item name="android:layout_height">wrap_content</item> <!-- 高さを自動調整 -->
    <item name="android:minWidth">100dp</item> <!-- 最小幅を指定して正方形に近づける -->
    <item name="android:minHeight">100dp</item> <!-- 最小高さを指定して正方形に近づける -->
  </style>

  <style name="exitButtonStyle">
    <item name="android:background">@drawable/exit_button</item> <!-- カスタム背景を指定 -->
    <item name="android:layout_width">wrap_content</item> <!-- 横幅を自動調整 -->
    <item name="android:layout_height">match_parent</item> <!-- 高さを自動調整 -->
    <item name="android:minWidth">50dp</item> <!-- 最小幅を指定して正方形に近づける -->
    <item name="android:minHeight">50dp</item> <!-- 最小高さを指定して正方形に近づける -->
  </style>

  <style name="storeButtonStyle">
    <item name="android:background">@drawable/store_button</item> <!-- カスタム背景を指定 -->
    <item name="android:layout_width">wrap_content</item> <!-- 横幅を自動調整 -->
    <item name="android:layout_height">wrap_content</item> <!-- 高さを自動調整 -->
    <item name="android:minWidth">50dp</item> <!-- 最小幅を指定して正方形に近づける -->
    <item name="android:minHeight">50dp</item> <!-- 最小高さを指定して正方形に近づける -->
  </style>

  <style name="CustomInputTextLayoutStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
    <item name="android:background">@android:color/transparent</item> <!-- 背景を透明に設定 -->
    <item name="android:textColor">@android:color/black</item> <!-- テキストカラーを設定 -->
  </style>

<!--fragment_day-->
  <style name="LineViewStyle">
    <item name="android:layout_marginTop">40dp</item>
    <item name="android:layout_marginBottom">40dp</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0.1dp</item>
    <item name="android:layout_weight">8</item>
    <item name="android:background">@color/grey</item>
  </style>

<!--fragment_week-->
  <style name="weekdayTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="dayLayoutInWeek">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:background">@drawable/grey_border</item>
  </style>

  <style name="weekdayTaskView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">7</item>
  </style>

<!--fragment_month-->
  <style name="weekLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/grey_border</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="dayLayout">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/grey_border</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="dayText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:text">@string/daySample</item> <!-- デフォルトのテキスト -->
  </style>

  <style name="dayTaskView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">5</item>
  </style>

  <style name="month_circle">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:background">@drawable/circle_outline</item>
    <item name="android:visibility">gone</item>
  </style>

  <style name="dayTextContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
  </style>

  <!--AddToDoActivity-->
  <style name="CustomPickerDialog" parent="Theme.AppCompat.Dialog.Alert">
    <!-- ダイアログのサイズ -->
    <item name="android:windowMinWidthMajor">20%</item>
    <item name="android:windowMinWidthMinor">20%</item>
  </style>
</resources>

